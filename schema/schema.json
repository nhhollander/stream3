{
    "title": "Stream3 message validation schema",
    "description": "This schema validates client to server and server to client messages",
    "$schame": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["type"],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "auth",
                "authresult",
                "message"
            ]
        }
    },
    "anyOf": [
        {"$ref": "components/auth.json"},
        {"$ref": "components/authresult.json"},
        {"$ref": "components/message.json"}
    ],
    "additionalProperties": true
}